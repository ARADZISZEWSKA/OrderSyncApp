<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:ProjektMaui"
             x:Class="ProjektMaui.Views.LoginPage"
             Title="{x:Static resx:Resources.LoginTitle}">
    <StackLayout Padding="20" Spacing="15">
        <Entry Placeholder="{x:Static resx:Resources.EmailPlaceholder}" x:Name="EmailEntry"/>
        <Entry Placeholder="{x:Static resx:Resources.PasswordPlaceholder}" IsPassword="True" x:Name="PasswordEntry"/>
        <Button Text="{x:Static resx:Resources.LoginButton}" Clicked="OnLoginClicked"/>
        <Button Text="Zarejestruj siÄ™" Clicked="OnRegisterClicked"/>
    </StackLayout>
</ContentPage>
