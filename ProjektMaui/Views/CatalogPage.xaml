<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMaui.Views.CatalogPage"
             Title="Katalog produktów">

    <CollectionView x:Name="ProductsCollection">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Margin="10" Padding="10">
                    <StackLayout Spacing="10">
                        <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" FontSize="16"/>
                        <Label Text="{Binding Price, StringFormat='Cena: {0} zł'}" FontSize="16"/>

                        <Button Text="Zamów"
                                Clicked="OnOrderClicked"
                                CommandParameter="{Binding Id}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
