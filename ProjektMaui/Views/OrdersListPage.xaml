<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProjektMaui.Views.OrdersListPage"

    BackgroundColor="#e7ecf0">

    <ScrollView>
        <Grid>
            <!-- âœ… Responsywny kontener -->
            <ContentView 
                x:Name="OrdersContainer"
                HorizontalOptions="Center"
                Margin="20"
                MaximumWidthRequest="1000">

                <VerticalStackLayout 
                    Padding="10"
                    Spacing="20">

                    <!-- ðŸ“… Filtr dat (responsywny) -->
                    <Frame BackgroundColor="White"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="True">

                        <!-- âœ… WrapLayout: dziaÅ‚a jak Flexbox, ukÅ‚ada elementy w pionie na maÅ‚ych ekranach -->
                        <FlexLayout 
                            Direction="Row"
                            Wrap="Wrap"
                            JustifyContent="Start"
                            AlignItems="Center"
                            >

                            <VerticalStackLayout Spacing="5"
                                                 WidthRequest="200"
                                                 Margin="0,0,15,15">
                                <Label Text="Od:" FontAttributes="Bold"/>
                                <DatePicker x:Name="FromDatePicker" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5"
                                                 Padding="10"
                                                 WidthRequest="200"
                                                 Margin="0,0,15,15">
                                <Label Text="Do:" FontAttributes="Bold"/>
                                <DatePicker x:Name="ToDatePicker" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5"
                                                 WidthRequest="200"
                                                 Margin="0,0,15,15">
                                <Label Text="Status:" FontAttributes="Bold"/>
                                <Picker x:Name="StatusPicker" />
                            </VerticalStackLayout>

                            <Button Text="Filtruj"
                                    Clicked="OnFilterClicked"
                                    BackgroundColor="#003c53"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="15,10"
                                    WidthRequest="150"/>
                        </FlexLayout>
                    </Frame>

                    <!-- ðŸ“‹ Lista zamÃ³wieÅ„ -->
                    <CollectionView x:Name="OrdersCollectionView">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#d0d0d0"
                                       BackgroundColor="White"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5"
                                       HasShadow="True">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="{Binding Product.Name}"
                                               FontFamily="RobotoMedium"
                                               FontSize="18" />
                                        <Label Text="Uwagi:" FontFamily="RobotoMedium" />
                                        <Label Text="{Binding Notes}" />

                                        <Label Text="UÅ¼ytkownik:" FontFamily="RobotoMedium" />
                                        <Label Text="{Binding User.FirstName}" />

                                        <Label Text="Status:" FontFamily="RobotoMedium" />
                                        <Label Text="{Binding Status}" />

                                        <Label Text="{Binding CreatedAt}" 
                                               FontSize="12" 
                                               TextColor="Gray" />

                                        <Button Text="ZmieÅ„ status"
                                                Clicked="OnChangeStatusClicked"
                                                CommandParameter="{Binding Id}"
                                                BackgroundColor="#003c53"
                                                TextColor="White"
                                                CornerRadius="8"
                                                Padding="12,8" 
                                                WidthRequest="200"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- ðŸ“¤ Eksport CSV -->
                    <Button 
                        Text="Eksportuj do CSV"
                        Clicked="OnExportClicked"
                        BackgroundColor="#003c53"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="15,10"
                        Margin="0,20,0,20"
                        WidthRequest="200"/>
                </VerticalStackLayout>

            </ContentView>
        </Grid>
    </ScrollView>

</ContentPage>
