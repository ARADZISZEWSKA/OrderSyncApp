<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMaui.Views.MyOrdersPage"
             Title="Moje zamÃ³wienia"
             BackgroundColor="#e7ecf0">

    <ScrollView>
        <Grid>
            <!-- âœ… Responsywny kontener -->
            <ContentView 
                x:Name="MyOrdersContainer"
                HorizontalOptions="Center"
                Margin="20"
                MaximumWidthRequest="1000">

                <VerticalStackLayout 
                    Padding="10"
                    Spacing="20">

                    <!-- ðŸ“‹ Lista zamÃ³wieÅ„ -->
                    <CollectionView x:Name="OrdersListView"
                                    ItemsLayout="VerticalList">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="#d0d0d0"
                                       BackgroundColor="White"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,5"
                                       HasShadow="True">
                                    <VerticalStackLayout Spacing="10">
                                        <Label Text="{Binding Product.Name}"
                                               FontFamily="RobotoMedium"
                                               FontSize="18" />

                                        <Image Source="{Binding ImageUrl}"
                                               HeightRequest="200"
                                               Aspect="AspectFill"
                                               HorizontalOptions="Fill"
                                               >
                                            <Image.Triggers>
                                                <DataTrigger TargetType="Image"
                                                             Binding="{Binding ImageUrl}"
                                                             Value="">
                                                    <Setter Property="IsVisible" Value="False" />
                                                </DataTrigger>
                                                <DataTrigger TargetType="Image"
                                                             Binding="{Binding ImageUrl}"
                                                             Value="{x:Null}">
                                                    <Setter Property="IsVisible" Value="False" />
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>

                                        <Label Text="Uwagi:" FontFamily="RobotoMedium" />
                                        <Label Text="{Binding Notes}" />

                                        <Label Text="Status:" FontFamily="RobotoMedium" />
                                        <Label Text="{Binding Status}" />

                                        <Label Text="{Binding CreatedAt}" 
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ContentView>
        </Grid>
    </ScrollView>

</ContentPage>
