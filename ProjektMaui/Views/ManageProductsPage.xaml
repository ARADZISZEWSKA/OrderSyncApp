<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMaui.Views.ManageProductsPage"
             BackgroundColor="#e7ecf0">

    <ScrollView>
        <Grid>
            <!-- ðŸ“Œ Responsywny kontener -->
            <ContentView 
                HorizontalOptions="Fill"
                Margin="20"
                >

                <!-- ðŸ“Œ CollectionView wewnÄ…trz, automatyczne dopasowanie -->
                <CollectionView x:Name="ProductsCollection"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="Fill"
                                SelectionMode="None">


                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   CornerRadius="20"
                                   BorderColor="#ddd"
                                   HasShadow="True"
                                   BackgroundColor="White"
                                   HorizontalOptions="Fill">

                                <VerticalStackLayout Spacing="10">

                                    <!-- Obraz -->
                                    <Frame CornerRadius="16"
                                           Padding="0"
                                           HasShadow="False"
                                           BackgroundColor="#eeeeee"
                                           HeightRequest="180"
                                           HorizontalOptions="Fill">
                                        <Image Source="{Binding ImageUrl}"
                                               Aspect="AspectFill"
                                               HorizontalOptions="Fill"
                                               VerticalOptions="Fill"/>
                                    </Frame>

                                    <!-- Nazwa -->
                                    <Label Text="{Binding Name}"
                                           FontFamily="RobotoMedium"
                                           FontSize="18"
                                           TextColor="#003c53"/>

                                    <!-- Opis -->
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="Gray"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>

                                    <!-- Cena -->
                                    <Label Text="{Binding Price, StringFormat='Cena: {0:C}'}"
                                           FontSize="14"
                                           TextColor="DarkGreen"/>

                                    <!-- Akcje -->
                                    <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                        <Button Text="Edytuj"
                                                Clicked="OnEditProduct"
                                                BackgroundColor="#003c53"
                                                TextColor="White"
                                                CornerRadius="10"
                                                HeightRequest="40"
                                                CommandParameter="{Binding .}"/>
                                        <Button Text="UsuÅ„"
                                                Clicked="OnDeleteProduct"
                                                BackgroundColor="#d62828"
                                                TextColor="White"
                                                CornerRadius="10"
                                                HeightRequest="40"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </ContentView>
        </Grid>
    </ScrollView>
</ContentPage>
