<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMaui.Views.ReportIssuePage"
             Title="Zgłoś problem">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Opisz problem:" FontSize="16" />
            <Editor x:Name="ContentEditor" Placeholder="Wpisz treść zgłoszenia..." HeightRequest="150" />
            <Button Text="Wyślij" Clicked="OnSubmitClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
