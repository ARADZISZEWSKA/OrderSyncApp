<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMaui.Views.RegisterPage"
             Title="Rejestracja">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Imię" />
            <Entry x:Name="FirstNameEntry" Placeholder="Wpisz imię" />

            <Label Text="Nazwisko" />
            <Entry x:Name="LastNameEntry" Placeholder="Wpisz nazwisko" />

            <Label Text="Email" />
            <Entry x:Name="EmailEntry" Placeholder="Wpisz email" Keyboard="Email" />

            <Label Text="Hasło" />
            <Entry x:Name="PasswordEntry" Placeholder="Wpisz hasło" IsPassword="True" />

            <Label Text="Powtórz hasło" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Powtórz hasło" IsPassword="True" />

            <Button Text="Zarejestruj się" Clicked="OnRegisterClicked" />
            
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Masz już konto?" />
                <Button Text="Zaloguj się" Clicked="OnLoginClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
